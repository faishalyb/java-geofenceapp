<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync Data" />

    <!-- Progress Indicator Container -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syncing data..."
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Dropdown Container -->
    <LinearLayout
        android:id="@+id/dropdownContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Pilih Lokasi TPH"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Kode Blok Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Blok:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerKodeBlok"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown" />

        <!-- No TPH Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No TPH:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerTPH"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:enabled="false" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnShowOnMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show on Map"
                android:enabled="false"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCheckGeofence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Check Location"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

    <!-- Geofence Status Card -->
    <LinearLayout
        android:id="@+id/geofenceStatusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textGeofenceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Geofence Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textDistanceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: Calculating..."
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Map Container with OpenStreetMap -->
    <LinearLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗺️ TPH Location Map (OpenStreetMap)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white" />

        <!-- OpenStreetMap MapView -->
        <org.osmdroid.views.MapView
            android:id="@+id/osmMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

    </LinearLayout>

    <!-- Show All Data Button -->
    <Button
        android:id="@+id/btnShowAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show All Data"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Silakan klik 'Sync Data' untuk memuat data"
            android:gravity="start"
            android:textSize="14sp"
            android:background="@android:drawable/edit_text" />

    </ScrollView>

</LinearLayout>