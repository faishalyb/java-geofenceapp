<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync Data"
        android:textSize="16sp"
        android:padding="12dp" />

    <!-- Progress Indicator Container -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syncing data..."
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Current Location Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="12dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Current Location Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textLocationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📍 Getting location..."
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Dropdown Container -->
    <LinearLayout
        android:id="@+id/dropdownContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 Select TPH Location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Kode Blok Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Blok:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerKodeBlok"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown" />

        <!-- No TPH Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No TPH:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerTPH"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:enabled="false" />

        <!-- Geofence Check Button -->
        <Button
            android:id="@+id/btnCheckGeofence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Check Geofence Location"
            android:enabled="false"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@android:drawable/btn_default" />

    </LinearLayout>

    <!-- Geofence Status Card -->
    <LinearLayout
        android:id="@+id/geofenceStatusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textGeofenceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Geofence Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textDistanceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: Calculating..."
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Show All Data Button -->
    <Button
        android:id="@+id/btnShowAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 Show All Data"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textSize="14sp" />



</LinearLayout>